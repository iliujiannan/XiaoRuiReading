<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main"
        tools:context="com.ljn.xiaoruireading.view.concrete_views.FirstWelcomActivity">
        <TextView
                android:id="@+id/first_welcome_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/text_login_border"
                android:gravity="center"
                android:text="登录"
                android:textColor="@color/sys_black"
                android:textSize="@dimen/sys_general_font_size"
                android:layout_marginStart="56dp"
                android:layout_marginBottom="80dp"

                android:paddingBottom="5dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="5dp"
        />
    <TextView
            android:id="@+id/first_welcome_reg_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/text_reg_border"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/sys_white"
            android:textSize="@dimen/sys_general_font_size"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="80dp"

            android:paddingBottom="5dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="5dp"
    />
    <TextView
            android:id="@+id/first_welcome_visit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="去看看 >>"
            android:textSize="14sp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/sys_white"
    />

</RelativeLayout>
