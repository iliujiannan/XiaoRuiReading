<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/sys_transparent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/page3_chapter_id"
            android:text="第一章"
            android:textSize="@dimen/sys_mini_font_size"
            android:paddingTop="10dp"
            android:paddingStart="15dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <TextView
            android:id="@+id/page3_text_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <com.ljn.xiaoruireading.view.custom_view.ReaderText.ReaderTextView
            android:id="@+id/item_page3_text"
            android:textSize="@dimen/sys_large_font_size"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:lineSpacingExtra="4dp"
            android:layout_centerVertical="true"
            android:textColor="@color/sys_black"
            android:layout_width="match_parent"
            android:layout_height="520dp"/>
    <TextView
            android:id="@+id/page3_read_rate"
            android:text="0.00%"
            android:textSize="@dimen/sys_mini_font_size"
            android:paddingTop="10dp"
            android:paddingStart="15dp"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    <TextView
            android:id="@+id/page3_page_num"
            android:text="1"
            android:textSize="@dimen/sys_mini_font_size"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
</RelativeLayout>