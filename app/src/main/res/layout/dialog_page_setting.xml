<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/sys_black"
                android:alpha="0.9"
                android:layout_height="match_parent">
    <TextView
            android:textSize="@dimen/sys_large_font_size"
            android:textStyle="bold"
            android:textColor="@color/sys_white"
            android:text="字号设置"
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/font_setting_left"
                android:textColor="@color/sys_white"
                android:text="A-"
                android:textStyle="bold"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/text_fontsetting_border"

                android:textSize="@dimen/sys_huge_font_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/font_setting_size"
                android:textColor="@color/sys_white"
                android:text="16"
                android:textSize="@dimen/sys_large_font_size"
                android:layout_centerInParent="true"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        <TextView
                android:id="@+id/font_setting_right"
                android:layout_toEndOf="@id/font_setting_left"
                android:textColor="@color/sys_white"
                android:layout_marginStart="50dp"
                android:text="A+"
                android:textStyle="bold"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/text_fontsetting_border"

                android:textSize="@dimen/sys_huge_font_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>